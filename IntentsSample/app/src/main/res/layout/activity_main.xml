<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView android:id="@+id/lblGreeting"
        android:text="@string/greeting_general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button android:id="@+id/btnGetName"
        android:text="@string/get_name"
        android:onClick="getName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <Button android:id="@+id/btnShowOrigin"
        android:text="@string/show_origin"
        android:onClick="showOrigin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</LinearLayout>
